# =============================================================================
# CAPSULE PROJECT - ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
# Copy this file to '.env' and update the values with your actual credentials.
# This file can be safely committed to version control as it contains no secrets.

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION (MySQL)
# =============================================================================
DB_HOST=localhost
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=capsule_db
DB_PORT=3306

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_SECRET=your-strong-random-secret-key-here
SESSION_MAX_AGE=1800000

# =============================================================================
# EMAIL CONFIGURATION (Nodemailer with Gmail)
# =============================================================================
EMAIL_SERVICE=gmail
EMAIL_USER=vasuvarshney2002@gmail.com
EMAIL_PASS=spsq ulhf ockl eumq
SUPPORT_EMAIL=your-support@email.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECURE_COOKIES=false
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=app.log

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
LOW_STOCK_THRESHOLD=5
HIGH_STOCK_THRESHOLD=15
MAX_LOGIN_ATTEMPTS=5

# Admin user credentials (for initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=secure-admin-password

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG_MODE=true
POPULATE_SAMPLE_DATA=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
